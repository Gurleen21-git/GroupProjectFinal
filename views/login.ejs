<!DOCTYPE html>
<html lang="en">
    <%- include("layouts/header") -%> 
    <body>
        <!-- Navigation-->
        <%- include("layouts/navbar") -%> 
        <!-- Page Header-->

 
      
       
        <!-- Post Content-->

        <main class="mb-4" >
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7 custom-login">
                        <h1 class="signupheading">LOGIN</h1>
                        
                        <div class="my-5">
                            <form method="POST" id="login"  action="/users/login" >
    
                                <div class="form-floating">
                                    <input class="form-control" id="username" name="username" type="text" placeholder="Enter your username..." />
                                    <label for="username">Username</label>
                                </div>
                                
                                <div class="form-floating">
                                    <input class="form-control" id="password" name="password" type="password" placeholder="Enter your password..." />
                                    <label for="password">Password</label>
                                </div>
    
                                <br />
                                <!-- Submit Button-->
                                <button class="btn btn-primary text-uppercase" id="submitButton" type="submit">Login</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        
       

      


        <!-- Footer-->
        <%- include("layouts/footer") -%> 

        <!-- scripts-->
        <%- include("layouts/script") -%> 
    </body>
</html>
