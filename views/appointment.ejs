<!DOCTYPE html>
<html lang="en">
    <%- include("layouts/header") -%> 
    <body>
        <!-- Navigation-->
        <%- include("layouts/navbar") -%> 
        <!-- Page Header-->
        <header class="masthead" style="background-image: url('assets/img/appt-bg.jpg');margin-bottom: 0;">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="post-heading">
                            <h1 class="signupheading">Appointment</h1>


                            <form method="POST" id="appointment"  action="/post/appointment" >

                                <div class="form-floating flex">
                                    <input class="form-control" id="apptDate" name="apptDate" type="date" placeholder="Choose your date..." required/>
                                    <label for="apptDate">Appointment Date</label>
                                </div>
                                
                                <div class="form-floating flex">
                                

                                     <select name="apptTime" id="apptTime">
                                        <%
                                        for ( var i = 0; i < appointmentTimes.length; i++ )
                                        {
                                            var selected = ( appointmentTimes[i].disabled === true ) ? "disabled" : "";
                                            %><option value="<%=appointmentTimes[i].time %>" <%=selected %>><%=appointmentTimes[i].time %></option><%
                                        }
                                        %> 
                                      </select>
                                   
                                </div>

                                <br />
                              
                               

                                <!-- Submit Button-->
                                <button class="btn btn-primary text-uppercase" id="submitButton" type="submit">Add Slots</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Post Content-->
        <!-- Footer-->
        <%- include("layouts/footer") -%> 

        <!-- scripts-->
        <%- include("layouts/script") -%> 
    </body>
</html>
